{
    // Python Configuration
    "python.defaultInterpreterPath": "python3",
    "python.terminal.activateEnvironment": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length=120"],
    "python.sortImports.args": ["--line-length=120"],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,

    // Environment Management
    "python-envs.defaultEnvManager": "ms-python.python:system",
    "python-envs.pythonProjects": [],

    // File Association & Syntax Highlighting
    "files.associations": {
        "*.sql": "sql",
        "*.mql": "javascript",
        "*.mongodb": "javascript",
        "mongosql": "python"
    },

    // Editor Configuration for MongoSQL Development
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 120],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll.pylint": "explicit"
    },

    // MongoDB and SQL Specific Settings
    "sql.format.alignColumnDefinitions": true,
    "sql.format.datatypeCase": "upper",
    "sql.format.keywordCase": "upper",
    "sql.format.functionCase": "upper",

    // Search and Files Configuration
    "search.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/KB": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.git": false,
        "**/.DS_Store": true
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true
    },

    // Terminal Configuration
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
    },

    // Debugging Configuration
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "QA",
        "-v"
    ],

    // Language-specific tool configuration
    "shellcheck.enable": true,
    "shellcheck.executablePath": "shellcheck",
    "shellcheck.customArgs": [
        "--exclude=SC1008,SC2148"
    ],

    // JSON and Configuration Files
    "json.format.insertSpaceAfterCommaDelimiter": true,
    "json.format.insertSpaceAfterSemicolonInForStatements": true,
    "json.format.insertSpaceBeforeAndAfterBinaryOperators": true,

    // Git Integration
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,

    // Markdown Configuration (for documentation)
    "markdown.preview.fontSize": 14,
    "markdown.preview.lineHeight": 1.6,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    // Language-Specific Formatting
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[sql]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },

    // Intellisense and Auto-completion
    "editor.suggest.insertMode": "replace",
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",

    // MongoSQL Project Specific Settings
    "files.defaultLanguage": "python",
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "breadcrumbs.enabled": true,

    // Performance Optimizations
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    // Problem Matcher for MongoSQL CLI
    "task.problemMatchers": [
        {
            "name": "mongosql-error",
            "pattern": {
                "regexp": "^ERROR (\\d+) \\((\\w+)\\): (.*)$",
                "file": 1,
                "line": 2,
                "message": 3
            }
        }
    ]
}
