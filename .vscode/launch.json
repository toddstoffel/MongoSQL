{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MongoSQL CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli/main.py",
            "args": ["classicmodels", "-e", "SELECT COUNT(*) FROM customers"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Debug QA Test Framework",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/QA/mariadb_comparison_qa.py",
            "args": ["--category", "datetime", "--verbose"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Debug SQL Parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/core/parser.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "Debug MongoDB Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/database/mongodb_client.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "Debug Function Mapper",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
